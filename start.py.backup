            return
    
    # 3. Iniciar serviÃ§os
    start_services()
    
    # 4. Tentar importar e iniciar app principal
    try:
        print_msg("ğŸŒ Iniciando FastAPI...", "INFO")
        
        # Tentar importar o main app
        sys.path.insert(0, os.getcwd())
        
        # Executar via uvicorn diretamente
        os.system(f"{sys.executable} -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload")
        
    except Exception as e:
        print_msg(f"âŒ Erro iniciando app principal: {e}", "ERROR")
        print_msg("ğŸ”„ Tentando app simples...", "INFO")
        
        create_simple_app()
        
        print_msg("ğŸš€ Iniciando app simples...", "INFO")
        os.system(f"{sys.executable} simple_app.py")

if __name__ == "__main__":
    main()